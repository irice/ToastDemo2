<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="katey2658.com.my.toastdemo.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_showToast1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="显示Toast"/>
        <Button
            android:id="@+id/btn_showToast2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=" 显示toast2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_showToast3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="显示Toast3"/>
        <Button
            android:id="@+id/btn_showToast4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=" 显示toast4"/>
    </LinearLayout>


    <AutoCompleteTextView
        android:layout_margin="16dp"
        android:id="@+id/auto_complete_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:completionThreshold="1"/>

    <MultiAutoCompleteTextView
        android:layout_margin="16dp"
        android:id="@+id/multi_auto_complete_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
